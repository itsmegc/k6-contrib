datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id               String          @id @default(cuid())
  title            String          @default("")
  status           PostStatusType?
  content          String          @default("")
  image_id         String?
  image_filesize   Int?
  image_width      Int?
  image_height     Int?
  image_extension  String?
  image_sizesMeta  Json?
  image2_id        String?
  image2_filesize  Int?
  image2_width     Int?
  image2_height    Int?
  image2_extension String?
  image2_sizesMeta Json?
  image3_id        String?
  image3_filesize  Int?
  image3_width     Int?
  image3_height    Int?
  image3_extension String?
  image3_sizesMeta Json?
  image4_id        String?
  image4_filesize  Int?
  image4_width     Int?
  image4_height    Int?
  image4_extension String?
  image4_sizesMeta Json?
  image5_id        String?
  image5_filesize  Int?
  image5_width     Int?
  image5_height    Int?
  image5_extension String?
  image5_sizesMeta Json?
  publishDate      DateTime?
  author           Author?         @relation("Post_author", fields: [authorId], references: [id])
  authorId         String?         @map("author")

  @@index([authorId])
}

model Author {
  id    String @id @default(cuid())
  name  String @default("")
  email String @unique @default("")
  posts Post[] @relation("Post_author")
}

enum PostStatusType {
  draft
  published
}
